<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GapoDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_app</item>
        <item name="colorPrimaryVariant">@color/color_app</item>
        <item name="colorOnPrimary">@color/color_app</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_app</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    <style name="Widget.BottomNavigationViewActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/sp13</item>
    </style>

    <style name="Widget.BottomNavigationViewInActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/sp12</item>
    </style>
</resources>